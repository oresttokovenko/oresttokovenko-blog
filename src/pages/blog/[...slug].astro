---
import { getCollection, render } from "astro:content";
import Layout from "@layouts/Layout.astro";
import { SITE_TITLE } from "@/consts.ts";
import WIPBanner from "@/components/WIPBanner.astro";

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

// Get the blog post data
const { entry } = Astro.props;
if (entry === undefined) {
  throw new Error("No blog entry found");
}
const { Content } = await render(entry);
---

<Layout title={`${entry.data.title} | ${SITE_TITLE}`}>
  <div style="background-color: rgb(238, 230, 210);">
    <!-- WIP Banner -->
    {entry.data.wip && <WIPBanner />}

    <div class="mx-auto max-w-4xl px-4 py-12 sm:px-6 md:py-16 lg:px-8">
      <article>
        <header class="mb-10 text-center">
          <div class="mb-6 flex items-center justify-center space-x-2">
            <time
              datetime={entry.data.publishDate.toISOString()}
              class="font-ibm text-sm text-gray-600"
            >
              {
                entry.data.publishDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })
              }
            </time>
          </div>

          <h1
            class="font-spectral mb-6 text-xl font-bold tracking-tight text-gray-900 md:text-2xl lg:text-3xl"
          >
            {entry.data.title}
          </h1>

          {
            entry.data.description && (
              <p class="font-spectral mx-auto mt-4 max-w-2xl text-base text-gray-700">
                {entry.data.description}
              </p>
            )
          }
        </header>

        <div
          class="prose prose-base prose-h1:text-xl prose-h2:text-base prose-headings:font-bold prose-headings:mb-4 prose-headings:mt-6 prose-p:my-4 prose-p:leading-relaxed prose-code:font-ibm font-spectral mx-auto mt-4 max-w-none"
        >
          <Content />
        </div>

        <div class="mt-16 border-t border-gray-200 pt-8">
          <a
            href="/blog"
            class="font-ibm inline-flex items-center text-base font-medium"
            style="color: rgb(22, 31, 116);"
          >
            <span>&larr; Back</span>
          </a>
        </div>
      </article>
    </div>
  </div>
</Layout>
