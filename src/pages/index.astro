---
import Layout from '../layouts/Layout.astro'
import Background from '../layouts/Background.astro'
const { waveEmoji = '\u{1F44B}' } = Astro.props
---

<Layout title='Welcome'>
  <div
    class='relative h-full w-full min-h-screen bg-white flex items-center justify-center'
  >
    <Background />
    <div class='text-black font-bold text-7xl text-left z-10 group'>
      Hello, my name is Orest
      <span
        class='absolute transition-all duration-300 group-hover:rotate-[60deg] p-2'
        >{waveEmoji}</span
      >
      <br />
      I craft solutions through data <br />
      and software engineering <br />
    </div>
  </div>
</Layout>
