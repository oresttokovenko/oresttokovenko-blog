---
import Layout from '../layouts/Layout.astro'
import Background from '../layouts/Background.astro'
const { waveEmoji = '\u{1F44B}' } = Astro.props
---

<Layout title="Orest's Tech Blog">
  <div
    class='relative h-full w-full min-h-screen bg-white flex items-center justify-center'
  >
    <Background />
    <h1 class='text-black font-bold text-7xl text-left z-10 group'>
      Hello, my name is Orest
      <span
        class='absolute transition-all duration-300 group-hover:rotate-[60deg] group-hover:translate-x-6 group-hover:-translate-y-4 p-2'
        >{waveEmoji}</span
      >
      <br />
      I craft solutions through data <br />
      and software engineering <br />
    </h1>
  </div>
</Layout>
