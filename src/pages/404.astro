---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../consts";
---

<Layout title={`${SITE_TITLE} | Page Not Found`}>
  <div class="w-full min-h-[calc(100vh-4rem)] flex flex-col items-center justify-center bg-white px-4">
    <div class="text-center max-w-3xl">
      <h1 class="text-3xl leading-none font-mono text-gray-900 mb-6 font-bold">404</h1>
      <p class="text-xl md:text-2xl font-mono text-gray-600">
        The page you're looking for doesn't exist or has been moved
      </p>
    </div>
  </div>
</Layout>