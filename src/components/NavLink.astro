---
interface Props {
  href: string;
  label: string;
  external?: boolean;
}

const { href, label, external } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class="group flex items-center text-sm text-gray-700 hover:text-black"
>
  <span class="relative">
    {label}
    <span
      class="absolute bottom-0 left-0 h-0.5 w-full origin-left scale-x-0 transform bg-black transition-transform duration-1000 group-hover:scale-x-100"
    ></span>
  </span>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="ml-2 h-3 w-3"
    viewBox="0 0 20 20"
    style="fill: currentColor;"
  >
    <path
      fill-rule="evenodd"
      d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
      clip-rule="evenodd"></path>
  </svg>
</a>
