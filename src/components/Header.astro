---
const navLinks = [
  { href: '/', text: 'Home' },
  { href: '/blog', text: 'Blog' },
  { href: '/contact', text: 'Contact' }
]
---

<nav class='bg-white border-gray-200'>
  <div
    class='max-w-screen-xl flex flex-wrap items-center justify-end mx-auto p-4'
  >
    <div class='hidden w-full md:block md:w-auto' id='navbar-default'>
      <ul
        class='font-medium hover:underline-offset-8 text-lg flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white'
      >
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class={`block py-2 px-3 text-black md:p-0 font-semibold relative after:absolute after:bg-[#7c3aed] after:bottom-0 after:left-0 after:h-[3px] after:w-full after:origin-bottom-right after:scale-x-0 hover:after:origin-bottom-left hover:after:scale-x-100 after:transition-transform after:ease-in-out after:duration-300`}
              >
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
