---
// src/components/Landing.astro
import { Image } from "astro:assets";
import heroImage from "@/assets/hero_roman_ruins.png";
---

<section
  class="flex min-h-0 w-full flex-1 items-center justify-center overflow-hidden"
  style="background-color: rgb(238, 230, 210); padding-bottom: 5%;"
>
  <!-- Hero image container -->
  <div class="w-full px-0 md:px-4" style="max-width: 1344px;">
    <Image
      src={heroImage}
      alt="Ancient Roman ruins illustration"
      class="h-auto w-full"
      loading="eager"
      quality={90}
    />
  </div>
</section>
