---
// src/components/Landing.astro
import { Image } from "astro:assets";
import heroImage from "@/assets/hero_roman_ruins.png";
---

<section
  class="w-full flex-1 min-h-0 flex items-center justify-center overflow-hidden"
  style="background-color: rgb(238, 230, 210);"
>
  <!-- Hero image container -->
  <div class="w-full px-4" style="max-width: 1344px;">
    <Image
      src={heroImage}
      alt="Ancient Roman ruins illustration"
      class="w-full h-auto"
      loading="eager"
      quality={90}
    />
  </div>
</section>
